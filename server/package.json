{
  "name": "cryptowatch",
  "version": "1.0.0",
  "description": "Check values for crytocurrencies",
  "main": "application.js",
  "dependencies": {
    "apicache": "^1.4.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.1",
    "moment": "^2.24.0",
    "mongoose": "^5.6.8",
    "node-cron": "^2.0.3",
    "redis": "^2.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.17.0",
    "jest": "^24.8.0",
    "mongodb-memory-server": "^5.1.10"
  },
  "scripts": {
    "start": "node ./application",
    "test": "jest --setupFiles ./config/tests",
    "dev": "jest --setupFiles ./config/tests --watch"
  },
  "_moduleAliases": {
    "@infrastructure": "infrastructure",
    "@models": "models",
    "@services": "services",
    "@config": "config",
    "@api": "api"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@models(.*)$": "<rootDir>/models$1",
      "^@services(.*)$": "<rootDir>/services$1",
      "^@api(.*)$": "<rootDir>/api$1",
      "^@config(.*)$": "<rootDir>/config$1"
    }
  },
  "keywords": [
    "cryptocurrencies"
  ],
